<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <OutputType>Exe</OutputType>
	  <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
	<EnablePackageValidation>true</EnablePackageValidation>
	<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>
  <ItemGroup>
	<PackageReference Include="ErrorProne.NET.CoreAnalyzers" Version="0.1.2">
		<PrivateAssets>all</PrivateAssets>
		<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
	</PackageReference>
	<PackageReference Include="Avalonia" Version="0.10.11" />
	<PackageReference Include="Serilog" Version="2.10.0" />
	<PackageReference Include="Serilog.Sinks.Console" Version="4.0.1" />
	<PackageReference Include="Serilog.Sinks.Debug" Version="2.0.0" />
	<PackageReference Include="SerilogAnalyzer" Version="0.15.0" />
	<PackageReference Include="System.Text.Encoding.CodePages" Version="6.0.0" />
	  <PackageReference Include="Live.Avalonia" Version="1.3.1" />
	  <PackageReference Include="Microsoft.Win32.Registry" Version="5.0.0" />
	  <PackageReference Include="System.Management" Version="6.0.0" />
	  <PackageReference Include="CommandLineParser" Version="2.8.0" />
	  <PackageReference Include="Avalonia" Version="0.10.11" />
	  <PackageReference Include="Avalonia.Desktop" Version="0.10.11" />
	  <PackageReference Include="Avalonia.ReactiveUI" Version="0.10.11" />
	  <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
	  <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="0.10.11" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Include="UI\Assets\**" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="UI\Controls\ScalableBitmapControl.axaml.cs">
      <DependentUpon>ScalableBitmapControl.axaml</DependentUpon>
    </Compile>
    <Compile Update="UI\Gui.axaml.cs">
      <DependentUpon>Gui.axaml</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
