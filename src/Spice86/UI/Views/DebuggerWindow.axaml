<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Spice86.UI.Views.DebuggerWindow"
		xmlns:converters="using:Spice86.UI.Converters"
		xmlns:vm="using:Spice86.UI.ViewModels"
        Title="Debugger"
		Icon="/Icon/Spice86.ico"
		Height="600" Width="800" ShowInTaskbar="False">
	<Design.DataContext>
		<vm:DebuggerViewModel />
	</Design.DataContext>
	<ScrollViewer>
		<Grid RowDefinitions="Auto,Auto,Auto">
			<Expander Header="CPU" IsExpanded="True" Grid.Row="0">
				<DataGrid IsReadOnly="True" Name="CPUDataGrid" Items="{Binding Machine}" AutoGenerateColumns="False">
					<DataGrid.Columns>
						<DataGridTextColumn Header="CS" Binding="{Binding Cpu.State.CS}" />
						<DataGridTextColumn Header="IP" Binding="{Binding Cpu.State.IP}" />
					</DataGrid.Columns>
				</DataGrid>
			</Expander>
		</Grid>
	</ScrollViewer>
</Window>
