<UserControl	xmlns="https://github.com/avaloniaui"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
				x:Class="Spice86.UI.Controls.ScalableBitmapControl"
				x:Name="MyScalableBitmapControl">
	<StackPanel Orientation="Vertical">
		<LayoutTransformControl>
			<LayoutTransformControl.LayoutTransform>
				<ScaleTransform
								ScaleX="{Binding ScaleFactor, ElementName=MyScalableBitmapControl}"
								ScaleY="{Binding ScaleFactor, ElementName=MyScalableBitmapControl}">
				</ScaleTransform>
			</LayoutTransformControl.LayoutTransform>
			<Image Source="{Binding Bitmap}" Stretch="Fill" Cursor="None" />
		</LayoutTransformControl>
	</StackPanel>
</UserControl>
