<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Spice86.UI.Controls.ScalableBitmapControl">
	<ScaleTransform x:Name="Scale"
					ScaleX="{Binding ScaleFactor, Source={RelativeSource Self}"
					ScaleY="{Binding ScaleFactor, Source={RelativeSource Self}">
		<Decorator Child="{Binding Bitmap, Source={RelativeSource Self}"></Decorator>
	</ScaleTransform>
</UserControl>
