<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="Spice86.UI.Gui"
			 xmlns:controls="using:Spice86.UI.Controls"
			 xmlns:local="using:Spice86.UI"
			 x:Name="MyGui">
	<UniformGrid>
		<ItemsControl Items="{Binding VideoBuffers, ElementName=MyGui}">
			<ItemsControl.ItemTemplate>
				<DataTemplate x:DataType="local:VideoBuffer">
					<StackPanel Orientation="Vertical">
						<Label Content="{Binding Address}"/>
						<ContentControl Content="{Binding ScalableBitmapControl}" />
					</StackPanel>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</UniformGrid>
</UserControl>
