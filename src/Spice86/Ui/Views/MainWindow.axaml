<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vm="using:Spice86.UI.ViewModels"
		xmlns:local="using:Spice86.UI.Views"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:Class="Spice86.UI.Views.MainWindow"
		Icon="/UI/Assets/Spice86.ico"
		Title="{Binding MainTitle}"
		MinWidth="1024"
		MinHeight="768"
		WindowStartupLocation="CenterScreen"
		CanResize="True"
		WindowState="Maximized">
	<Design.DataContext>
		<vm:MainWindowViewModel />
	</Design.DataContext>
	<TabControl Items="{Binding VideoBuffers}">
		<TabControl.ItemTemplate>
			<DataTemplate x:DataType="vm:VideoBufferViewModel">
				<TabItem Header="{Binding Address, StringFormat={}0x{0:X}}">
				</TabItem>
			</DataTemplate>
		</TabControl.ItemTemplate>
	</TabControl>
</Window>