<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:Spice86.UI.ViewModels"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="Spice86.UI.Views.VideoBufferView"
			>
	<Design.DataContext>
		<vm:VideoBufferViewModel />
	</Design.DataContext>
	<Grid RowDefinitions="*,Auto">
		<LayoutTransformControl Grid.Row="0">
			<LayoutTransformControl.RenderTransform>
				<ScaleTransform
					ScaleX="{Binding Scale}"
					ScaleY="{Binding Scale}">
				</ScaleTransform>
			</LayoutTransformControl.RenderTransform>
			<Viewbox>
				<Image x:Name="Image"
					Stretch="None"
					Source="{Binding Bitmap}"/>
			</Viewbox>
		</LayoutTransformControl>
		<WrapPanel Orientation="Horizontal" Grid.Row="1">
			<Label Content="Scale" />
			<NumericUpDown Text="{Binding Scale}" Margin="10,0,0,0" />
		</WrapPanel>
	</Grid>
</UserControl>
