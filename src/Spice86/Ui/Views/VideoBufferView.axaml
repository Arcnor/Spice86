<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:Spice86.UI.ViewModels"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="Spice86.UI.Views.VideoBufferView"
			>
	<Design.DataContext>
		<vm:VideoBufferViewModel />
	</Design.DataContext>
	<LayoutTransformControl>
		<LayoutTransformControl.RenderTransform>
			<ScaleTransform
				ScaleX="{Binding ScaleFactor}"
				ScaleY="{Binding ScaleFactor}">
			</ScaleTransform>
		</LayoutTransformControl.RenderTransform>
		<Image x:Name="Image" Source="{Binding Bitmap}" Width="{Binding Width}" Height="{Binding Height}" />
	</LayoutTransformControl>


</UserControl>
